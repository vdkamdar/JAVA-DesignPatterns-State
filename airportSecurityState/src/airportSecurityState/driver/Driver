package aiportSecurityState.driver;

import java.util.ArrayList;
import java.util.Arrays;
import java.lang.RuntimeException;

public class Driver{
    public static void main(String args[]) throws Exception{
	String inputFile = null;
	String outputFile = null;
	
	try{
	    if(args.length == 2){
		inputFile = args[0];
		outputFile = args[1];
	    }
	    else{
		throw new RuntimeException();
	    }
	}
	catch (Exception e){
	    System.err.println("Two argumemts expected!");
	    e.printStackTrace();
	    System.exit(0);
	}
	
	FileProcessor fp_input = new FileProcessor(inputFile);

	String line = null;
	ArrayList<String[]> days = new ArrayList<String[]>();
	String[] traveller_information = new String[4];
	
	while((line = fp_input.readLine()) != null){
	    traveller_information = line.split(";");
	    days.add(traveller_information);
	}

	results_orig.writeToFile();
    }
}